.d-flex.justify-content-center.form-outer-container
  .card.flex-column.shadow.p-3.mb-5.bg-secondary.rounded.form-card
    .form-container
      .form-title
        %h2 Sign Up
      .text-dark
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .form-floating.mb-4
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user_email", placeholder: "Email"
            %label(for="floatingInput") Email
          .form-floating.mb-4
            = f.text_field :username, class: "form-control", id: "user_email", placeholder: "Username"
            %label(for="floatingInput") Username
          .mb-4
            = f.label :user_type
            = f.select :user_type, options_for_select(['Broker', 'Buyer']), selected: 'Broker', class: "form-control", id: "user_type"
          .form-floating.mb-4
            = f.password_field :password, autocomplete: "new-password", class: "form-control", id: "user_password", placeholder: "Password"
            %label(for="floatingInput") Password
          .form-floating.mb-4
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "user_password", placeholder: "Confirm Password"
            %label(for="floatingInput") Confirm Password
          .actions.d-flex.justify-content-center
            = f.submit "Sign up", class: "btn btn-orange btn-margin btn-wide"
        = render "devise/shared/links"