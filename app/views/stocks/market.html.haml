.container.card.shadow.p-3.mb-5.bg-body.rounded
  - if current_user.user_type == 'broker'
    = link_to 'Add New Stock', new_stock_path, class: "btn btn-orange"
    = link_to 'View All Orders', stocks_path, class: "btn btn-orange"
  .d-flex.justify-content-evenly.flex-wrap
    - @stocks.each do |stock|
      .card.shadow.p-3.mb-5.bg-secondary.rounded
        .card-body
          %h5.card-title= stock.name
          %p.card-text Php #{stock.unit_price}
          %p.card-text #{stock.shares} shares available
          .container.d-flex.justify-content-evenly
            - if current_user.user_type == 'buyer'
              = link_to 'Buy', class: "btn btn-orange"
            - elsif current_user.user_type == 'broker'
              = link_to 'Edit', class: "btn btn-primary"
              = link_to 'Delete', class: "btn btn-danger"